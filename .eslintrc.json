{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "react-app",
    "react-app/jest",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": [
    "react",
    "import",
    "jsx-a11y",
    "react-hooks",
    "prettier"
  ],
  "rules": {
    "react/prop-types": 0,
    // "indent": [
    //   "error",
    //   4
    // ],
    "ImportDeclaration": 0,
    "linebreak-style": 1,
    "quotes": [
      "error",
      "single"
    ],
    "import/no-anonymous-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "import/no-duplicates": "error",
    "import/named": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "react/no-typos": "error",
    "react/no-unused-state": "error",
    "react-hooks/rules-of-hooks": "error",
    "no-trailing-spaces": [
      0
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}